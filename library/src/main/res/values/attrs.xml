<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TimerView">
        <attr name="fulltime" format="integer" />
        <attr name="curtime" format="integer" />

        <attr name="countdown" format="boolean"/>

        <attr name="allowMoveForward" format="boolean"/>
        <attr name="allowMoveBackward" format="boolean"/>

        <attr name="backgroundCircleDrawable" format="reference"/>

        <attr name="playIcon" format="reference" />
        <attr name="pauseIcon" format="reference" />
        <attr name="finishIcon" format="reference" />

        <attr name="playButtonTriangleSideLength" format="dimension" />

        <attr name="progressWidth" format="dimension" />
        <attr name="progressColor" format="color" />
        <attr name="backgroundCircleColor" format="color" />

        <attr name="playButtonTint" format="color" />
        <attr name="pauseButtonTint" format="color" />
        <attr name="finishIconTint" format="color" />

        <attr name="grooveWidth" format="dimension" />
        <attr name="grooveColor" format="color" />

        <attr name="bigTextSize" format="dimension"/>
        <attr name="smallTextSize" format="dimension"/>

        <attr name="timeFormat" format="string"/>

        <attr name="bigTextColor" format="color"/>
        <attr name="smallTextColor" format="color"/>

        <attr name="enabled" format="boolean" />

    </declare-styleable>

</resources>